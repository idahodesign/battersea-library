/**
 * Battersea Component Library v1.0.0 - LESS Styles
 * CSS Variables for easy theming
 */

// ========================================
// CSS VARIABLES
// ========================================
:root {
  // Colors
  --battersea-primary: #007bff;
  --battersea-text: #333;
  --battersea-bg: #fff;
  --battersea-border: #ddd;
  --battersea-shadow: rgba(0, 0, 0, 0.1);
  --battersea-overlay: rgba(0, 0, 0, 0.5);
  
  // Tooltip
  --battersea-tooltip-bg: #333;
  --battersea-tooltip-text: #fff;
  --battersea-tooltip-padding: 8px 12px;
  --battersea-tooltip-radius: 4px;
  --battersea-tooltip-offset: 8px;
  
  // Slider
  --battersea-slider-arrow-size: 40px;
  --battersea-slider-arrow-bg: rgba(0, 0, 0, 0.5);
  --battersea-slider-arrow-color: #fff;
  --battersea-slider-dot-size: 12px;
  --battersea-slider-dot-spacing: 8px;
  
  // Tabs
  --battersea-tab-padding: 12px 24px;
  --battersea-tab-border-width: 2px;
  --battersea-tab-active-color: var(--battersea-primary);
  
  // Popup
  --battersea-popup-padding: 24px;
  --battersea-popup-max-width: 600px;
  --battersea-popup-radius: 8px;
  
  // Accordion
  --battersea-accordion-padding: 16px;
  --battersea-accordion-border-width: 1px;
  
  // Progress
  --battersea-progress-height: 20px;
  --battersea-progress-radius: 10px;
  --battersea-progress-bg: #e0e0e0;
  --battersea-progress-fill: var(--battersea-primary);
  --battersea-progress-circular-stroke: #e0e0e0;
  --battersea-progress-circular-fill: var(--battersea-primary);
  
  // Animation
  --battersea-animation-duration: 0.6s;
  --battersea-animation-timing: ease-out;
}

// ========================================
// TOOLTIP STYLES
// ========================================
.battersea-tooltip {
  position: fixed;
  background: var(--battersea-tooltip-bg);
  color: var(--battersea-tooltip-text);
  padding: var(--battersea-tooltip-padding);
  border-radius: var(--battersea-tooltip-radius);
  font-size: 14px;
  line-height: 1.4;
  z-index: 10000;
  pointer-events: none;
  white-space: nowrap;
  opacity: 0;
  transform: translateY(0);
  transition: opacity 0.2s, transform 0.2s;
  
  &::after {
    content: '';
    position: absolute;
    border: 5px solid transparent;
  }
  
  &.battersea-tooltip-top {
    &::after {
      top: 100%;
      left: 50%;
      transform: translateX(-50%);
      border-top-color: var(--battersea-tooltip-bg);
    }
    
    &.battersea-tooltip-show {
      opacity: 1;
      transform: translateY(-4px);
    }
  }
  
  &.battersea-tooltip-bottom {
    &::after {
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      border-bottom-color: var(--battersea-tooltip-bg);
    }
    
    &.battersea-tooltip-show {
      opacity: 1;
      transform: translateY(4px);
    }
  }
  
  &.battersea-tooltip-left {
    &::after {
      left: 100%;
      top: 50%;
      transform: translateY(-50%);
      border-left-color: var(--battersea-tooltip-bg);
    }
    
    &.battersea-tooltip-show {
      opacity: 1;
      transform: translateX(-4px);
    }
  }
  
  &.battersea-tooltip-right {
    &::after {
      right: 100%;
      top: 50%;
      transform: translateY(-50%);
      border-right-color: var(--battersea-tooltip-bg);
    }
    
    &.battersea-tooltip-show {
      opacity: 1;
      transform: translateX(4px);
    }
  }
}

// ========================================
// SLIDER STYLES
// ========================================
[data-slider] {
  position: relative;
  overflow: hidden;
  
  [data-slider-track] {
    display: flex;
    transition: transform 0.3s ease-in-out;
  }
  
  [data-slider-item] {
    flex: 0 0 100%;
    min-width: 100%;
  }
  
  [data-slider-prev],
  [data-slider-next] {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: var(--battersea-slider-arrow-size);
    height: var(--battersea-slider-arrow-size);
    background: var(--battersea-slider-arrow-bg);
    color: var(--battersea-slider-arrow-color);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background 0.3s;
    
    &:hover {
      background: rgba(0, 0, 0, 0.7);
    }
    
    &:focus {
      outline: 2px solid var(--battersea-primary);
      outline-offset: 2px;
    }
  }
  
  [data-slider-prev] {
    left: 16px;
    
    &::before {
      content: '‹';
      font-size: 24px;
    }
  }
  
  [data-slider-next] {
    right: 16px;
    
    &::before {
      content: '›';
      font-size: 24px;
    }
  }
  
  [data-slider-dots] {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: var(--battersea-slider-dot-spacing);
    z-index: 10;
  }
  
  .battersea-slider-dot {
    width: var(--battersea-slider-dot-size);
    height: var(--battersea-slider-dot-size);
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background 0.3s;
    padding: 0;
    
    &:hover {
      background: rgba(255, 255, 255, 0.8);
    }
    
    &.active {
      background: var(--battersea-primary);
    }
    
    &:focus {
      outline: 2px solid var(--battersea-primary);
      outline-offset: 2px;
    }
  }
}

// ========================================
// TABS STYLES
// ========================================
[data-tabs] {
  [data-tabs-list] {
    display: flex;
    border-bottom: 1px solid var(--battersea-border);
    gap: 8px;
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  [data-tab] {
    padding: var(--battersea-tab-padding);
    background: none;
    border: none;
    border-bottom: var(--battersea-tab-border-width) solid transparent;
    cursor: pointer;
    color: var(--battersea-text);
    font-size: 16px;
    transition: color 0.3s, border-color 0.3s;
    
    &:hover {
      color: var(--battersea-primary);
    }
    
    &.active {
      color: var(--battersea-tab-active-color);
      border-bottom-color: var(--battersea-tab-active-color);
    }
    
    &:focus {
      outline: 2px solid var(--battersea-primary);
      outline-offset: -2px;
    }
  }
  
  [data-tab-panel] {
    padding: 24px 0;
    display: none;
    
    &.active {
      display: block;
    }
  }
}

// ========================================
// POPUP/MODAL STYLES
// ========================================
[data-popup-target] {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--battersea-overlay);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.3s;
  
  &.active {
    display: flex;
    opacity: 1;
  }
  
  .battersea-popup-content {
    background: var(--battersea-bg);
    padding: var(--battersea-popup-padding);
    border-radius: var(--battersea-popup-radius);
    max-width: var(--battersea-popup-max-width);
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 4px 20px var(--battersea-shadow);
    position: relative;
    transform: scale(0.9);
    transition: transform 0.3s;
  }
  
  &.active .battersea-popup-content {
    transform: scale(1);
  }
  
  [data-popup-close] {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: var(--battersea-text);
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: background 0.3s;
    
    &:hover {
      background: rgba(0, 0, 0, 0.05);
    }
    
    &:focus {
      outline: 2px solid var(--battersea-primary);
      outline-offset: 2px;
    }
    
    &::before {
      content: '×';
    }
  }
}

// ========================================
// ACCORDION STYLES
// ========================================
[data-accordion] {
  border: var(--battersea-accordion-border-width) solid var(--battersea-border);
  border-radius: 4px;
  
  [data-accordion-item] {
    border-bottom: var(--battersea-accordion-border-width) solid var(--battersea-border);
    
    &:last-child {
      border-bottom: none;
    }
  }
  
  [data-accordion-trigger] {
    width: 100%;
    padding: var(--battersea-accordion-padding);
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    color: var(--battersea-text);
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.3s;
    
    &:hover {
      background: rgba(0, 0, 0, 0.02);
    }
    
    &:focus {
      outline: 2px solid var(--battersea-primary);
      outline-offset: -2px;
    }
    
    &::after {
      content: '+';
      font-size: 20px;
      transition: transform 0.3s;
    }
  }
  
  [data-accordion-item].active [data-accordion-trigger]::after {
    transform: rotate(45deg);
  }
  
  [data-accordion-content] {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
    
    > * {
      padding: var(--battersea-accordion-padding);
      padding-top: 0;
    }
  }
}

// ========================================
// COUNTER STYLES
// ========================================
[data-counter] {
  font-size: 2em;
  font-weight: bold;
  color: var(--battersea-primary);
}

.battersea-counter-pretext,
.battersea-counter-posttext {
  font-size: 0.5em;
  font-weight: normal;
  color: var(--battersea-text);
}

.battersea-counter-prefix {
  font-size: 0.8em;
  opacity: 0.8;
}

.battersea-counter-suffix {
  font-size: 0.8em;
  opacity: 0.8;
}

.battersea-counter-number {
  // Main number styling (inherits from parent)
}

// ========================================
// PROGRESS BAR STYLES
// ========================================
[data-progress] {
  margin: 16px 0;
  width: 100%;
}

.battersea-progress-label {
  margin-bottom: 8px;
  font-weight: 500;
  color: var(--battersea-text);
}

.battersea-progress-track {
  width: 100%;
  height: var(--battersea-progress-height);
  background: var(--battersea-progress-bg);
  border-radius: var(--battersea-progress-radius);
  overflow: hidden;
  position: relative;
}

.battersea-progress-fill {
  height: 100%;
  background: var(--battersea-progress-fill);
  border-radius: var(--battersea-progress-radius);
  transition: width 0.3s ease-out;
}

.battersea-progress-value {
  margin-top: 4px;
  font-size: 14px;
  color: var(--battersea-text);
  text-align: right;
}

// Circular Progress
.battersea-progress-circular {
  display: block;
  margin: 0 auto;
  transform: rotate(-90deg);
  max-width: 100%;
  height: auto;
}

.battersea-progress-circular-track {
  stroke: var(--battersea-progress-circular-stroke);
}

.battersea-progress-circular-fill {
  stroke: var(--battersea-progress-circular-fill);
  transition: stroke-dashoffset 0.3s ease-out;
}

.battersea-progress-circular-text {
  font-weight: bold;
  fill: var(--battersea-text);
  transform: rotate(90deg);
  transform-origin: center;
}

[data-progress-type="circular"] {
  text-align: center;
  max-width: 100%;
  
  .battersea-progress-label {
    margin-top: 8px;
    margin-bottom: 0;
  }
}

// ========================================
// ANIMATION STYLES
// ========================================
.battersea-animated {
  animation-duration: var(--battersea-animation-duration);
  animation-timing-function: var(--battersea-animation-timing);
  animation-fill-mode: both;
}

// Fade In
@keyframes battersea-fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.battersea-fade-in {
  animation-name: battersea-fade-in;
}

// Fade Up - Move up while fading in simultaneously
@keyframes battersea-fade-up {
  from {
    opacity: 0;
    transform: translateY(40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.battersea-fade-up {
  animation-name: battersea-fade-up;
}

// Fade Down - Move down while fading in simultaneously
@keyframes battersea-fade-down {
  from {
    opacity: 0;
    transform: translateY(-40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.battersea-fade-down {
  animation-name: battersea-fade-down;
}

// Fade Left - Move left while fading in simultaneously
@keyframes battersea-fade-left {
  from {
    opacity: 0;
    transform: translateX(40px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.battersea-fade-left {
  animation-name: battersea-fade-left;
}

// Fade Right - Move right while fading in simultaneously
@keyframes battersea-fade-right {
  from {
    opacity: 0;
    transform: translateX(-40px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.battersea-fade-right {
  animation-name: battersea-fade-right;
}

// Delay utility classes
.delay-1 { animation-delay: 0.1s; }
.delay-2 { animation-delay: 0.2s; }
.delay-3 { animation-delay: 0.3s; }
.delay-4 { animation-delay: 0.4s; }
.delay-5 { animation-delay: 0.5s; }
.delay-6 { animation-delay: 0.6s; }
.delay-7 { animation-delay: 0.7s; }
.delay-8 { animation-delay: 0.8s; }
.delay-9 { animation-delay: 0.9s; }
.delay-10 { animation-delay: 1s; }

// ========================================
// UTILITY CLASSES
// ========================================
.battersea-sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

// ========================================
// NESTED CIRCULAR PROGRESS
// ========================================
[data-progress-nested] {
  text-align: center;
  margin: 16px auto;
  max-width: 100%;
}

.battersea-progress-nested {
  display: block;
  margin: 0 auto;
  transform: rotate(-90deg);
  max-width: 100%;
  height: auto;
}

.battersea-nested-progress-track {
  // Styles applied via inline attributes
}

.battersea-nested-progress-fill {
  transition: stroke-dashoffset 0.3s ease-out;
}

.battersea-nested-progress-text {
  font-weight: bold;
  fill: var(--battersea-text);
  transform: rotate(90deg);
  transform-origin: center;
}

// ========================================
// MULTI-ITEM SLIDER
// ========================================
[data-multislider] {
  position: relative;
  overflow: hidden;
  
  [data-multislider-track] {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }
  
  [data-multislider-item] {
    flex-shrink: 0;
    transition: opacity 0.3s ease-in-out;
  }
  
  [data-multislider-prev],
  [data-multislider-next] {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: var(--battersea-slider-arrow-size);
    height: var(--battersea-slider-arrow-size);
    background: var(--battersea-slider-arrow-bg);
    color: var(--battersea-slider-arrow-color);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background 0.3s;
    
    &:hover {
      background: rgba(0, 0, 0, 0.7);
    }
    
    &:focus {
      outline: 2px solid var(--battersea-primary);
      outline-offset: 2px;
    }
  }
  
  [data-multislider-prev] {
    left: 16px;
    
    &::before {
      content: '‹';
      font-size: 24px;
    }
  }
  
  [data-multislider-next] {
    right: 16px;
    
    &::before {
      content: '›';
      font-size: 24px;
    }
  }
  
  [data-multislider-dots] {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: var(--battersea-slider-dot-spacing);
    z-index: 10;
  }
  
  .battersea-multislider-dot {
    width: var(--battersea-slider-dot-size);
    height: var(--battersea-slider-dot-size);
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background 0.3s;
    padding: 0;
    
    &:hover {
      background: rgba(255, 255, 255, 0.8);
    }
    
    &.active {
      background: var(--battersea-primary);
    }
    
    &:focus {
      outline: 2px solid var(--battersea-primary);
      outline-offset: 2px;
    }
  }
}

// ========================================
// PARALLAX
// ========================================
[data-parallax] {
  background-attachment: scroll;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover !important;
  position: relative;
  min-height: 400px;
  overflow: hidden;
  
  .battersea-parallax-content {
    position: relative;
    z-index: 1;
  }
}

// ========================================
// FLIPBOX
// ========================================
[data-flipbox] {
  perspective: 1000px;
  cursor: pointer;
  width: 100%;
  min-height: 200px;
  
  .battersea-flipbox-inner {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 200px;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }
  
  .battersea-flipbox-front,
  .battersea-flipbox-back {
    position: absolute;
    width: 100%;
    height: 100%;
    min-height: 200px;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
  }
  
  .battersea-flipbox-front {
    z-index: 2;
    transform: rotateY(0deg) rotateX(0deg);
  }
  
  .battersea-flipbox-back {
    z-index: 1;
  }
  
  // Horizontal flip
  &.battersea-flipbox-horizontal {
    .battersea-flipbox-back {
      transform: rotateY(180deg);
    }
    
    &.battersea-flipbox-flipped .battersea-flipbox-inner {
      transform: rotateY(180deg);
    }
  }
  
  // Vertical flip
  &.battersea-flipbox-vertical {
    .battersea-flipbox-back {
      transform: rotateX(180deg);
    }
    
    &.battersea-flipbox-flipped .battersea-flipbox-inner {
      transform: rotateX(180deg);
    }
  }
}